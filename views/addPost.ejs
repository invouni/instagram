<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <title>Instagram</title>
  <meta name="description" content="" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    .wrapper {
      width: 100vw;
      height: 100vh;
      background: #090B0F;
    }

    form {
      width: auto;
      padding: 0.3rem;
      background: #fff;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      border-radius: 0.3rem;
    }

    input[type="file"] {
      display: none;
    }

    input[type="submit"] {
      padding: 0.6rem 0.9rem;
      display: block;
      border-radius: 2rem;
      background: #090B0F;
      border: 0;
      outline: 0;
      color: white;
      margin: auto auto;
      font-weight: 600;
      font-size: 80%;
    }

    .logo {
      width: 8rem;
      height: 8rem;
      border-radius: 1rem;
      margin: auto;
      background: #FF0069;
      position: relative;
      margin: 0.4rem;
    }

    video,
    img {
      display: none;
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 1rem;
    }
  </style>
</head>

<body>
  <div class="wrapper">
    <form class="adds" enctype="multipart/form-data" method="POST" action="/user/addInfo">
      <div class="logo" method="POST" action="/user/addReel">
        <input type="file" name="media-input" id="media-input" accept="video/*,image/*">
        <img src="" alt="" class="logo-image">
        <video src="" alt="" class="logo-video" muted autoplay loop></video>
      </div>
      <input type="submit" value="Submit">
    </form>
  </div>

  <script>
    let mediaInput = document.querySelector('#media-input');
    let previousFile = null;

    document.querySelector('.logo').addEventListener('click', () => {
      mediaInput.click();
    });

    mediaInput.addEventListener('change', (e) => {
      if (previousFile) {
        URL.revokeObjectURL(previousFile); // Free up memory by revoking the previous object URL
        previousFile = null;
      }

      const file = e.target.files[0];
      if (file) {
        const fileURL = URL.createObjectURL(file);

    
        let img = document.querySelector('.logo-image');
        let video = document.querySelector('.logo-video');

        // Hide both elements
        img.style.display = "none";
        video.style.display = "none";

        if (file.type.startsWith('image/')) {
          img.src = fileURL;
          img.style.display = "block";
        } else if (file.type.startsWith('video/')) {
          video.src = fileURL;
          video.style.display = "block";
        }

        previousFile = fileURL;
      }
    });
  </script>
</body>

</html>